<p id="notice"><%= notice %></p>

<h1>Business Streams</h1>

<table>
  <thead>
    <tr>
      <th>Business stream name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @business_streams.each do |business_stream| %>
      <tr>
        <td><%= business_stream.business_stream_name %></td>
        <td><%= link_to 'Show', business_stream %></td>
        <td><%= link_to 'Edit', edit_business_stream_path(business_stream) %></td>
        <td><%= link_to 'Destroy', business_stream, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

