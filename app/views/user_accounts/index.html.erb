<p id="notice"><%= notice %></p>

<h1>User Accounts</h1>

<table>
  <thead>
    <tr>
      <th>User type</th>
      <th>Email</th>
      <th>Password</th>
      <th>Date of birth</th>
      <th>Gender</th>
      <th>Is active</th>
      <th>Contact number</th>
      <th>Sms notification active</th>
      <th>Email notification active</th>
      <th>User image</th>
      <th>Registration date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_accounts.each do |user_account| %>
      <tr>
        <td><%= user_account.user_type %></td>
        <td><%= user_account.email %></td>
        <td><%= user_account.password %></td>
        <td><%= user_account.date_of_birth %></td>
        <td><%= user_account.gender %></td>
        <td><%= user_account.is_active %></td>
        <td><%= user_account.contact_number %></td>
        <td><%= user_account.sms_notification_active %></td>
        <td><%= user_account.email_notification_active %></td>
        <td><%= user_account.user_image %></td>
        <td><%= user_account.registration_date %></td>
        <td><%= link_to 'Show', user_account %></td>
        <td><%= link_to 'Edit', edit_user_account_path(user_account) %></td>
        <td><%= link_to 'Destroy', user_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

