<p id="notice"><%= notice %></p>

<h1>Seeker Profiles</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Current salary</th>
      <th>Is annually monthly</th>
      <th>Currency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seeker_profiles.each do |seeker_profile| %>
      <tr>
        <td><%= seeker_profile.first_name %></td>
        <td><%= seeker_profile.last_name %></td>
        <td><%= seeker_profile.current_salary %></td>
        <td><%= seeker_profile.is_annually_monthly %></td>
        <td><%= seeker_profile.currency %></td>
        <td><%= link_to 'Show', seeker_profile %></td>
        <td><%= link_to 'Edit', edit_seeker_profile_path(seeker_profile) %></td>
        <td><%= link_to 'Destroy', seeker_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

