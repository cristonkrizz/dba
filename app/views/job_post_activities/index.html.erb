<p id="notice"><%= notice %></p>

<h1>Job Post Activities</h1>

<table>
  <thead>
    <tr>
      <th>User account</th>
      <th>Job post</th>
      <th>Apply date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_post_activities.each do |job_post_activity| %>
      <tr>
        <td><%= job_post_activity.user_account %></td>
        <td><%= job_post_activity.job_post %></td>
        <td><%= job_post_activity.apply_date %></td>
        <td><%= link_to 'Show', job_post_activity %></td>
        <td><%= link_to 'Edit', edit_job_post_activity_path(job_post_activity) %></td>
        <td><%= link_to 'Destroy', job_post_activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

