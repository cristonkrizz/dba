<p id="notice"><%= notice %></p>

<h1>Job Locations</h1>

<table>
  <thead>
    <tr>
      <th>Street address</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_locations.each do |job_location| %>
      <tr>
        <td><%= job_location.street_address %></td>
        <td><%= job_location.city %></td>
        <td><%= job_location.state %></td>
        <td><%= job_location.country %></td>
        <td><%= job_location.zip %></td>
        <td><%= link_to 'Show', job_location %></td>
        <td><%= link_to 'Edit', edit_job_location_path(job_location) %></td>
        <td><%= link_to 'Destroy', job_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job Location', new_job_location_path %>
