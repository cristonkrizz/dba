<p id="notice"><%= notice %></p>

<h1>Job Posts</h1>

<table>
  <thead>
    <tr>
      <th>Posted by</th>
      <th>Job type</th>
      <th>Company</th>
      <th>Is company name hidden</th>
      <th>Created date</th>
      <th>Job description</th>
      <th>Job location</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_posts.each do |job_post| %>
      <tr>
        <td><%= job_post.posted_by %></td>
        <td><%= job_post.job_type %></td>
        <td><%= job_post.company %></td>
        <td><%= job_post.is_company_name_hidden %></td>
        <td><%= job_post.created_date %></td>
        <td><%= job_post.job_description %></td>
        <td><%= job_post.job_location %></td>
        <td><%= job_post.is_active %></td>
        <td><%= link_to 'Show', job_post %></td>
        <td><%= link_to 'Edit', edit_job_post_path(job_post) %></td>
        <td><%= link_to 'Destroy', job_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job Post', new_job_post_path %>
